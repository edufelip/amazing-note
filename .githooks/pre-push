#!/bin/bash
set -euo pipefail

repo_root="$(git rev-parse --show-toplevel)"
cd "$repo_root"

echo "[pre-push] Running scripts/pcm_update.py..."
if command -v python3 >/dev/null 2>&1; then
  python3 scripts/pcm_update.py
else
  echo "[pre-push] python3 not found; skipping pcm_update.py" >&2
  exit 0
fi
