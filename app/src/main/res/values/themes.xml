<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Amazingnote" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/main_pink</item>
        <item name="colorPrimaryVariant">@color/dark_pink</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="android:colorBackground">@color/bg_white</item>
        <item name="colorOnBackground">@color/default_black</item>

        <item name="android:statusBarColor" tools:targetApi="l">@color/main_pink</item>
        <item name="floatingActionButtonStyle">@style/MyFloatingActionButton</item>
        <item name="navigationViewStyle">@style/MyNavView</item>
        <item name="actionOverflowMenuStyle">@style/popupOverflowMenu</item>
    </style>

    <style name="Theme.Amazingnote.Launcher" parent="Theme.Amazingnote">
        <item name="android:windowBackground">@drawable/amazing_note_bg</item>
    </style>

    <style name="Theme.AmazingNote.AppBarLayout" parent="Theme.Amazingnote">
        <item name="imageButtonStyle">@style/ImageButton</item>
        <item name="actionOverflowButtonStyle">@style/MyOverflowButton</item>
        <item name="android:textColor">@color/white</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>
</resources>