<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.AquaNote" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/main_dark</item>
        <item name="colorPrimaryVariant">@color/main_color_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/main_color</item>
        <item name="colorOnSecondary">@color/purple_night</item>

        <item name="colorSurface">@color/main_dark</item>

        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:colorBackground">@color/purple_night</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="rowBgColor">@color/main_dark</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <item name="android:navigationBarColor">?attr/colorPrimary</item>
        <item name="floatingActionButtonStyle">@style/MyFloatingActionButton</item>
        <item name="navigationViewStyle">@style/MyNavView</item>
        <item name="actionOverflowMenuStyle">@style/popupOverflowMenu</item>
    </style>

    <style name="Theme.AquaNote.Launcher" parent="Theme.AquaNote">
        <item name="android:windowBackground">@drawable/aqua_note_bg</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorSecondary</item>
        <item name="android:navigationBarColor">?attr/colorSecondary</item>
    </style>

    <style name="Theme.AquaNote.AppBarLayout" parent="Theme.AquaNote">
        <item name="imageButtonStyle">@style/ImageButton</item>
        <item name="actionOverflowButtonStyle">@style/MyOverflowButton</item>
        <item name="android:textColor">@color/white</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>
</resources>