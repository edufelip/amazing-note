<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="tint">#ffffff</item>
    </style>

    <style name="SearchViewCloseButton" parent="">
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="MyOverflowButton" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">#ffffff</item>
    </style>

    <style name="MyFloatingActionButton" parent="Widget.Design.FloatingActionButton">
        <item name="backgroundTint">?attr/colorPrimaryVariant</item>
    </style>

    <!--  nav drawer-->
    <style name="MyNavView" parent="Widget.Design.NavigationView">
        <item name="android:background">@drawable/custom_navdrawer_bg</item>
        <item name="android:backgroundTint">?attr/colorPrimary</item>
        <item name="android:textSize">30sp</item>
        <item name="itemBackground">@drawable/custom_drawer_item_bg</item>
        <item name="listPreferredItemHeightSmall">120dp</item>
        <item name="itemIconTint">?attr/colorOnBackground</item>
        <item name="itemTextColor">?attr/colorOnBackground</item>
        <item name="itemTextAppearance">@style/NavDrawerTextStyle</item>
    </style>

    <style name="NavDrawerTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
    </style>
    <!--    -->

    <!-- Popup Dialog-->
    <style name="MyCustomDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@drawable/custom_popup_bg</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:buttonBarButtonStyle">@style/DialogButtonStyle</item>
    </style>

    <style name="DialogButtonStyle">
        <item name="android:textColor">@color/main_color</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:stateListAnimator">@null</item>
    </style>
    <!---->

    <!-- (...) options menu -->
    <style name="popupOverflowMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:popupBackground">@drawable/custom_popup_bg</item>
    </style>

    <style name="Theme.PopupOverlay.Menu" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>
    <!--    -->
</resources>