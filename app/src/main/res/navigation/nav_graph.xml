<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/listFragment">

    <fragment
        android:id="@+id/listFragment"
        android:name="com.edufelip.aqua_note.ui.fragments.ListFragment"
        android:label="Notes"
        tools:layout="@layout/fragment_list" >
        <action
            android:id="@+id/action_listFragment_to_addFragment"
            app:destination="@id/addFragment"
            app:enterAnim="@anim/from_right"
            app:exitAnim="@anim/to_left"
            app:popEnterAnim="@anim/from_left"
            app:popExitAnim="@anim/to_right" />
        <action
            android:id="@+id/action_listFragment_to_updateFragment"
            app:destination="@id/updateFragment"
            app:enterAnim="@anim/from_right"
            app:exitAnim="@anim/to_left"
            app:popEnterAnim="@anim/from_left"
            app:popExitAnim="@anim/to_right" />
        <action
            android:id="@+id/action_listFragment_to_trashFragment"
            app:destination="@id/trashFragment"
            app:enterAnim="@anim/from_right"
            app:exitAnim="@anim/to_left"
            app:popEnterAnim="@anim/from_left"
            app:popExitAnim="@anim/to_right" />
    </fragment>
    <fragment
        android:id="@+id/addFragment"
        android:name="com.edufelip.aqua_note.ui.fragments.AddFragment"
        android:label="Add Note"
        tools:layout="@layout/fragment_add" >
        <action
            android:id="@+id/action_addFragment_to_listFragment"
            app:destination="@id/listFragment"
            app:popUpTo="@id/listFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/updateFragment"
        android:name="com.edufelip.aqua_note.ui.fragments.UpdateFragment"
        android:label="Update Note"
        tools:layout="@layout/fragment_update" >
        <action
            android:id="@+id/action_updateFragment_to_listFragment"
            app:destination="@id/listFragment"
            app:popUpTo="@id/listFragment"
            app:popUpToInclusive="true" />
        <argument
            android:name="currentNote"
            app:argType="com.edufelip.aqua_note.data.models.Note" />
    </fragment>
    <fragment
        android:id="@+id/trashFragment"
        android:name="com.edufelip.aqua_note.ui.fragments.TrashFragment"
        android:label="TrashFragment" >
        <action
            android:id="@+id/action_trashFragment_to_listFragment"
            app:destination="@id/listFragment" />
        <action
            android:id="@+id/action_trashFragment_to_trashNoteFragment"
            app:destination="@id/trashNoteFragment"
            app:enterAnim="@anim/from_right"
            app:exitAnim="@anim/to_left"
            app:popEnterAnim="@anim/from_left"
            app:popExitAnim="@anim/to_right" />
    </fragment>
    <fragment
        android:id="@+id/trashNoteFragment"
        android:name="com.edufelip.aqua_note.ui.fragments.TrashNoteFragment"
        android:label="TrashNoteFragment" >
        <action
            android:id="@+id/action_trashNoteFragment_to_trashFragment"
            app:destination="@id/trashFragment" />
        <argument
            android:name="currentNote"
            app:argType="com.edufelip.aqua_note.data.models.Note" />
    </fragment>
</navigation>